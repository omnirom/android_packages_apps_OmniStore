<resources>
    <!-- Base application theme. -->
    <style name="Base.Theme.OmniStore" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- will only be used if dynamic color of AppTheme.Overlay is no used -->
        <item name="colorPrimary">#1565C0</item>
        <item name="colorAccent">?attr/colorPrimary</item>
        <item name="colorOnPrimary">@android:color/white</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar">?attr/isLightTheme</item>
        <item name="android:windowLightNavigationBar">?attr/isLightTheme</item>
        <item name="dialogCornerRadius">8dp</item>
    </style>

    <style name="Theme.OmniStore" parent="@style/Base.Theme.OmniStore">
    </style>

    <style name="AppTheme.Overlay" parent="ThemeOverlay.Material3.DynamicColors.DayNight">
    </style>

    <style name="BodyTextStyle" parent="@style/TextAppearance.Material3.BodyMedium">
    </style>

    <style name="BodyTextStyleSmall" parent="@style/TextAppearance.Material3.BodySmall">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <style name="TitleTextStyle" parent="@style/TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">16sp</item>
        <item name="android:letterSpacing">0</item>
    </style>

    <style name="SeparatorTextStyle" parent="@style/TextAppearance.Material3.TitleMedium">
        <item name="android:textSize">18sp</item>
    </style>
</resources>
